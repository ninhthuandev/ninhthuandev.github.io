<% if (!navbarLinks) {
    var navbarLinks = [];
} %>

<header class="navbar navbar-expand-lg border-bottom mb-3">
    <nav class="container-xxl">
        <button class="navbar-toggler me-2" type="button" data-bs-toggle="offcanvas" data-bs-target="#offCanvasSideNav"
                aria-controls="offCanvasSideNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <a class="navbar-brand" href="/">
            <i class="bi bi-tools"></i>
            NT Tools
        </a>
        <div class="order-lg-last flex-grow-1 flex-lg-grow-0 text-end">
            <span class="ms-auto" x-data="{isDark: $store.theme.value === 'dark'}">
                <button :class="{'btn btn-light': !isDark, 'btn btn-dark': isDark}"
                        x-data @click="() => {$store.theme.toggle(); isDark = !isDark}">
                    <i class="bi bi-brightness-high-fill"
                       x-data x-show="!isDark"></i>
                    <span x-data x-show="!isDark">
                        Light
                    </span>
                    <i class="bi bi-moon-stars-fill"
                       x-data x-show="isDark" style="display: none"></i>
                    <span x-data x-show="isDark" style="display: none">
                        Dark
                    </span>
                </button>
            </span>
        </div>
    </nav>
</header>