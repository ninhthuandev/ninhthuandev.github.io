<% if (!navbarLinks) {
    var navbarLinks = [];
} %>

<header class="navbar navbar-expand-lg border-bottom mb-3">
    <nav class="container-xxl">
        <a class="navbar-brand" href="/">
            <i class="bi bi-tools"></i>
            NT Tools
        </a>
        <div class="order-lg-last flex-grow-1 flex-lg-grow-0 text-end">
            <span class="ms-auto" x-data="{isDark: $store.theme.value === 'dark'}">
                <button :class="{'btn btn-light': !isDark, 'btn btn-dark': isDark}"
                        x-data @click="() => {$store.theme.toggle(); isDark = !isDark}">
                    <i class="bi bi-brightness-high-fill"
                       x-data x-show="!isDark"></i>
                    <span x-data x-show="!isDark">
                        Light
                    </span>
                    <i class="bi bi-moon-stars-fill"
                       x-data x-show="isDark" style="display: none"></i>
                    <span x-data x-show="isDark" style="display: none">
                        Dark
                    </span>
                </button>
            </span>
        </div>
        <button class="navbar-toggler ms-2" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <div class="offcanvas-body">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <% for (let navbarLink of navbarLinks) { %>
                        <li class="nav-item">
                            <a class="nav-link active"
                               aria-current="page"
                               href="<%= navbarLink.href %>">
                                <%= navbarLink.name %>
                            </a>
                        </li>
                    <% } %>
                </ul>
            </div>
        </div>
    </nav>
</header>